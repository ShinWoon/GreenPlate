<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal">
    <FrameLayout
        android:id="@+id/frame_layout_order"
        android:layout_width="110dp"
        android:layout_height="110dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_recommend_circle"/>
        <ImageView
            android:id="@+id/payingMenuImgIv"
            android:src="@drawable/salad04"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="start |center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payingMenuNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="@style/Text.regular.small.kr"
                android:text="메뉴명"/>
            <TextView
                android:id="@+id/payingMainDressingNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.regular.small.kr" />
            <TextView
                android:id="@+id/payingMenuToppingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                style="@style/Text.regular.small.kr"
                android:text="토핑"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="right|center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/payingMenuPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.regular.kr"
                android:text="10,000원"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>