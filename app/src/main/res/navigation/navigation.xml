<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ssafy.green_plate.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.ssafy.green_plate.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />
        <action
            android:id="@+id/action_orderFragment_to_shoppingcartFragment"
            app:destination="@id/shoppingcartFragment" />
        <action
            android:id="@+id/action_orderFragment_to_menuDetailFragment"
            app:destination="@id/menuDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuDetailFragment"
        android:name="com.ssafy.green_plate.MenuDetailFragment"
        android:label="fragment_menu_detail"
        tools:layout="@layout/fragment_menu_detail" />
    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.ssafy.green_plate.MypageFragment"
        android:label="fragment_mypage"
        tools:layout="@layout/fragment_mypage" >
        <action
            android:id="@+id/action_mypageFragment_to_orderHistoryFragment"
            app:destination="@id/orderHistoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="com.ssafy.green_plate.OrderDetailFragment"
        android:label="fragment_order_detail"
        tools:layout="@layout/fragment_order_detail" />
    <fragment
        android:id="@+id/orderHistoryFragment"
        android:name="com.ssafy.green_plate.OrderHistoryFragment"
        android:label="fragment_order_history"
        tools:layout="@layout/fragment_order_history" >
        <action
            android:id="@+id/action_orderHistoryFragment_to_orderHistoryDetailFragment"
            app:destination="@id/orderHistoryDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderHistoryDetailFragment"
        android:name="com.ssafy.green_plate.OrderHistoryDetailFragment"
        android:label="fragment_order_history_detail"
        tools:layout="@layout/fragment_order_history_detail" />
    <fragment
        android:id="@+id/payingFragment"
        android:name="com.ssafy.green_plate.PayingFragment"
        android:label="fragment_paying"
        tools:layout="@layout/fragment_paying" />
    <fragment
        android:id="@+id/shoppingcartFragment"
        android:name="com.ssafy.green_plate.ShoppingcartFragment"
        android:label="fragment_shoppingcart"
        tools:layout="@layout/fragment_shoppingcart" >
        <action
            android:id="@+id/action_shoppingcartFragment_to_payingFragment"
            app:destination="@id/payingFragment" />
    </fragment>
</navigation>